<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tumaini.tumaini.Loans.Loan_Advances">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loan advance application"
                android:background="@color/LimeGreen"
                android:textColor="@color/Black"
                android:layout_marginTop="4dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applicant Details"
                android:background="@color/lightgray02"
                android:textColor="@color/Black"
                android:layout_marginTop="4dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:hint="First Name"
                    android:textColor="@color/Black"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:id="@+id/edt_First_name_advance"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:hint="Last Name"
                    android:id="@+id/edt_Last_name_advance"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:textSize="18dp"
                    android:hint="Other Names"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:id="@+id/edt_Surname_name_advance"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:textColor="@color/Black"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:hint="Member Number"
                    android:id="@+id/edt_Member_number_advance"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="number"
                    android:enabled="false"
                    android:hint="Phone Number"
                    android:textColor="@color/Black"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:id="@+id/edt_Phone_number_advance"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="ID Number"
                    android:textColor="@color/Black"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:id="@+id/edt_ID_number_advance"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:cardElevation="5dp"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Amount applying for"
                        android:textColor="@color/LimeGreen"
                        android:textSize="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="KSH:"
                            android:textColor="@color/LimeGreen"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textStyle="bold"
                            android:layout_weight="2.5"
                            android:textSize="20dp"/>
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:hint="Amount"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:inputType="number"
                            android:gravity="center"
                            android:id="@+id/edt_amount_applying_advance"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="0.5"
                            android:hint="Rates"
                            android:id="@+id/edt_Phone_rate_advance"/>
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/LimeGreen"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textStyle="bold"
                            android:layout_weight="2.5"
                            android:textSize="20dp"/>
                    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Agreement"
                android:textSize="20dp"
                android:background="@color/lightgray02"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:text="Agreeing this, i confirm that all the information provided here is complete and accurate.."
                android:textColor="@color/LimeGreen"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Agree"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/rad_iagree_advance"
                    android:layout_marginTop="4dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/rad_decline_advance"
                    android:layout_marginTop="2dp"/>

            </RadioGroup>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Submit"
                android:theme="@style/PrimaryButton"
                android:id="@+id/Submit_advance"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
