<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tumaini.tumaini.Loans.MemberwithloanDetails">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member Details"
        android:layout_marginTop="8dp"
        android:background="@color/LimeGreen"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="20dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member Details"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:id="@+id/member_loan_details"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LimeGreen"
        android:text="Loan Details"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/Black"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:background="@color/white"
        android:elevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loan"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/acualloan_details"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Payment"
                android:layout_marginTop="10dp"
                android:textColor="@color/LimeGreen"
                android:layout_marginRight="4dp"
                android:textSize="18dp"
                android:id="@+id/Recentpayed_details"
                android:layout_marginLeft="8dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loan balance"
                android:textSize="20dp"
                android:textColor="@color/red"
                android:layout_marginTop="10dp"
                android:id="@+id/balance_details"
                android:layout_marginLeft="8dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="make payment"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:id="@+id/edit_shares_details"
                android:textSize="20dp"
                android:theme="@style/PrimaryButton"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
