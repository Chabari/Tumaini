<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tumaini.tumaini.Loans.Pay_Loan">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applicant Details"
                android:background="@color/lightgray02"
                android:textColor="@color/Black"
                android:layout_marginTop="4dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:id="@+id/edt_First_name_payloan"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:layout_weight="1"
                    android:hint="Last Name"
                    android:id="@+id/edt_Last_name_payloan"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:inputType="textPersonName"
                    android:hint="Other Names"
                    android:layout_weight="1"
                    android:id="@+id/edt_Surname_name_payloan"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:inputType="text"
                    android:hint="Member Number"
                    android:id="@+id/edt_Member_number_payloan"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="number"
                    android:enabled="false"
                    android:hint="Phone Number"
                    android:layout_weight="1"
                    android:id="@+id/edt_Phone_number_payloan"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:inputType="text"
                    android:hint="ID Number"
                    android:id="@+id/edt_ID_number_payloan"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guarantors"
                android:visibility="gone"
                android:id="@+id/tv_guarantors"
                android:background="@color/lightgray02"
                android:textColor="@color/Black"
                android:layout_marginTop="4dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guarantor 1"
                android:visibility="gone"
                android:id="@+id/tvguarantor_1"
                android:textSize="20dp"
                android:textColor="@color/LimeGreen"
                android:layout_marginTop="4dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="textPersonName"
                android:visibility="gone"
                android:hint="Full Name"
                android:id="@+id/edt_guarantor1_fullname_payloan"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:inputType="textPersonName"
                android:hint="Amount"
                android:id="@+id/edt_amount_garanta1_payloan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guarantor 2"
                android:visibility="gone"
                android:id="@+id/tvguarantor_2"
                android:textSize="20dp"
                android:textColor="@color/LimeGreen"
                android:layout_marginTop="4dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="textPersonName"
                android:visibility="gone"
                android:hint="Full Name"
                android:id="@+id/edt_guarantor2_fullname_payloan"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:inputType="textPersonName"
                android:hint="Amount"
                android:id="@+id/edt_amount_garanta2_payloan"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:cardElevation="5dp"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Amount Repaying"
                        android:textColor="@color/LimeGreen"
                        android:textSize="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="KSH:"
                            android:textColor="@color/LimeGreen"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textStyle="bold"
                            android:layout_weight="2.5"
                            android:textSize="20dp"/>
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:hint="Amount"
                            android:layout_gravity="center"
                            android:inputType="number"
                            android:gravity="center"
                            android:id="@+id/edt_amount_applying_payloan"/>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Submit"
                android:theme="@style/PrimaryButton"
                android:id="@+id/Submit_payloan"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
